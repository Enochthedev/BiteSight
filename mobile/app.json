{
  "expo": {
    "name": "BiteSight",
    "slug": "bitesight",
    "scheme": "bitesight",
    "version": "1.0.0",
    "orientation": "default",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/logo.png",
      "backgroundColor": "#5E7E98",
      "resizeMode": "contain"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "com.bitesight.app",
      "supportsTablet": true,
      "requireFullScreen": false,
      "infoPlist": {
        "NSCameraUsageDescription": "BiteSight needs access to your camera to capture meal photos for nutritional analysis.",
        "NSPhotoLibraryUsageDescription": "BiteSight needs access to your photo library to select meal photos for analysis.",
        "NSPhotoLibraryAddUsageDescription": "BiteSight needs permission to save meal photos to your library."
      }
    },
    "android": {
      "package": "com.bitesight.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.png",
        "backgroundColor": "#5E7E98"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Nunito-Light.ttf",
            "./assets/fonts/Nunito-Regular.ttf",
            "./assets/fonts/Nunito-SemiBold.ttf",
            "./assets/fonts/Nunito-Bold.ttf",
            "./assets/fonts/Nunito-LightItalic.ttf",
            "./assets/fonts/Nunito-Italic.ttf",
            "./assets/fonts/Nunito-SemiBoldItalic.ttf",
            "./assets/fonts/Nunito-BoldItalic.ttf"
          ]
        }
      ]
    ]
  }
}